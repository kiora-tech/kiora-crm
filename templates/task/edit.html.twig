{% extends 'base.html.twig' %}

{% block title %}{{ 'task.edit'|trans }}{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>{{ 'task.edit'|trans }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('task_index') }}">{{ 'task.list'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('task_show', {'id': task.id}) }}">{{ task.title }}</a></li>
                <li class="breadcrumb-item active">{{ 'task.edit'|trans }}</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'task.edit_form'|trans }}</h5>
                        {{ include('task/_form.html.twig', {'button_label': 'button.update'|trans}) }}
                        
                        <div class="d-flex gap-2 mt-3">
                            <twig:Button
                                link="{{ path('task_show', {'id': task.id}) }}"
                                theme="secondary"
                                icon="eye"
                                :label="'button.back_to_details'|trans"
                            />
                            
                            <twig:Button
                                link="{{ path('task_index') }}"
                                theme="info"
                                icon="list"
                                :label="'button.back_to_list'|trans"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}