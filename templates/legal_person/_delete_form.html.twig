<form method="post" action="{{ path('legal_person_delete', {'id': person.id}) }}" onsubmit="return confirm('{{ 'button.confirmation.delete'|trans }}');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
    <twig:Button
        type="submit"
        theme="danger"
        icon="trash"
        :label="'button.delete'|trans"
    />
</form>