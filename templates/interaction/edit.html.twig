{% extends 'base.html.twig' %}

{% block title %}{{ 'interaction.edit'|trans }}{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>{{ 'interaction.edit'|trans }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('interaction_show', {'id': interaction.id}) }}">{{ interaction.subject }}</a></li>
                <li class="breadcrumb-item active">{{ 'interaction.edit'|trans }}</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'interaction.edit_form'|trans }}</h5>
                        {{ include('interaction/_form.html.twig', {
                            'button_label': 'button.update'|trans,
                            'back_route': 'interaction_show',
                            'back_route_params': {'id': interaction.id}
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}