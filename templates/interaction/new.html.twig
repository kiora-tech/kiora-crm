{% extends 'base.html.twig' %}

{% block title %}{{ 'interaction.new'|trans }}{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>{{ 'interaction.new'|trans }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a></li>
                
                {% if entity_type == 'physical_person' %}
                    <li class="breadcrumb-item">{{ 'menu.clients'|trans }}</li>
                    <li class="breadcrumb-item"><a href="{{ path('physical_person_index') }}">{{ 'menu.physical_persons'|trans }}</a></li>
                    {% if entity.id is defined %}
                    <li class="breadcrumb-item"><a href="{{ path('physical_person_show', {'id': entity.id}) }}">{{ entity.firstName }} {{ entity.lastName }}</a></li>
                    {% endif %}
                    {% elseif entity_type == 'legal_person' %}
                    <li class="breadcrumb-item">{{ 'menu.clients'|trans }}</li>
                    <li class="breadcrumb-item"><a href="{{ path('legal_person_index') }}">{{ 'menu.legal_persons'|trans }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('legal_person_show', {'id': entity.id}) }}">{{ entity.name }}</a></li>
                {% elseif entity_type == 'project' %}
                    <li class="breadcrumb-item"><a href="{{ path('project_index') }}">{{ 'menu.projects'|trans }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('project_show', {'id': entity.id}) }}">{{ entity.title }}</a></li>
                {% elseif entity_type == 'task' %}
                    <li class="breadcrumb-item"><a href="{{ path('task_index') }}">{{ 'menu.tasks'|trans }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('task_show', {'id': entity.id}) }}">{{ entity.title }}</a></li>
                {% endif %}
                
                <li class="breadcrumb-item active">{{ 'interaction.new'|trans }}</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'interaction.create_form'|trans }}</h5>
                        {{ include('interaction/_form.html.twig', {
                            'back_route': back_route,
                            'back_route_params': back_route_params
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}