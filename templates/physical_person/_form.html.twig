{{ form_start(form) }}
    <div class="row g-3">
        <div class="col-md-6">
            {{ form_row(form.firstName) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.title) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.position) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.department) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.phone) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.mobile) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.birthDate) }}
        </div>
        <div class="col-12">
            {{ form_row(form.address) }}
        </div>
        <div class="col-md-6">
            <div class="form-check mt-3">
                {{ form_widget(form.isPrimaryContact) }}
                {{ form_label(form.isPrimaryContact) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-check mt-3">
                {{ form_widget(form.isManager) }}
                {{ form_label(form.isManager) }}
            </div>
        </div>
    </div>
    
    <twig:FormActions
        backRoute="physical_person_index"
    />
{{ form_end(form) }}