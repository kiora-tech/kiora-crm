{% extends 'base.html.twig' %}

{% block title %}{{ 'project.edit'|trans }}{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>{{ 'project.edit'|trans }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('project_index') }}">{{ 'menu.projects'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('project_show', {'id': project.id}) }}">{{ project.title }}</a></li>
                <li class="breadcrumb-item active">{{ 'project.edit'|trans }}</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'project.edit_form'|trans }}</h5>
                        {{ include('project/_form.html.twig', {'button_label': 'button.update'|trans}) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}